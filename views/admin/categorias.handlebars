<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
<hr>
    {{#if success_msg}}
    <div class="alert alert-success">{{success_msg}}</div>
    {{/if}}

    {{#if error_msg}}
    <div class="alert alert-danger">{{error_msg}}</div>
    {{/if}}

{{#each categorias}}

		 <div class="card">
  <div class="card-body">
    <h4>{{nome}}</h4>
    <small>ID: {{_id}}</small>
    <br>
    <small>Slug: {{slug}}</small>
    <br>
    <small>Data de criação: {{date}}</small>
    <a href="/admin/categorias/delete/{{_id}}"><button class="btn btn-danger ml-4">Delete</button></a>
    <a href="/admin/categorias/update/{{_id}}"><button class="btn btn-success ml-4">Atualizar</button></a>
    <a href="/admin/categorias/detail/{{_id}}"><button class="btn btn-info ml-4">Detalhes</button></a>
  </div>
</div>

{{else}}

{{/each}}