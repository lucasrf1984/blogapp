<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
<hr>
{{#each categorias}}

<div class="card">
  <div class="card-body">
    <h4>{{nome}}</h4>
    <small>ID: {{_id}}</small>
    <br>
    <small>Slug: {{slug}}</small>
    <br>
    <small>Data de criação: {{date}}</small>
    <a href="/admin/categorias/delete/{{_id}}"><button class="btn btn-success">Delete</button></a>
  </div>
</div>

{{else}}

{{/each}}